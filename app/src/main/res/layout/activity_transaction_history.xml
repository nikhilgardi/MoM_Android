<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/momHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.mom.app.fragment.HeaderFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/momHeader"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/transactionHistoryHeader"
                android:layout_below="@id/tableLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_activity_transaction_history"
                android:layout_margin="@dimen/large"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/historyHeader" />

            <LinearLayout
                android:id="@+id/layoutListView"
                android:layout_below="@id/transactionHistoryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/noTransactionsMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/listEmptyMessage"
                    android:textColor="@color/red"
                    android:text="@string/no_transactions_found"
                    />

                <ListView
                    android:id="@+id/listView"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btnBack"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                style="@style/ButtonAppTheme"
                android:onClick="goBack"
                android:text="@string/btn_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>
    </LinearLayout>
</RelativeLayout>