<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/ultra_ultra_small"
    android:layout_height="match_parent"
    android:weightSum="100">

    <com.mom.apps.ui.CustomTextView
        android:id="@+id/dateStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:paddingLeft="@dimen/ultra_ultra_small"
        android:textSize="@dimen/text_super_small"
        android:layout_weight="10"/>

    <com.mom.apps.ui.CustomTextView
        android:id="@+id/asyncTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:paddingLeft="@dimen/ultra_ultra_small"
        android:paddingRight="@dimen/ultra_ultra_small"
        android:textSize="@dimen/text_super_small"
        android:layout_weight="60"/>

    <com.mom.apps.ui.CustomTextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:paddingRight="@dimen/ultra_ultra_small"
        android:paddingEnd="@dimen/ultra_ultra_small"
        android:textSize="@dimen/text_super_small"
        android:layout_weight="10"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/small"
        android:layout_height="@dimen/small"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/ultra_ultra_small"
        android:layout_marginRight="@dimen/ultra_ultra_small"
        android:indeterminate="true"
        android:layout_weight="20"/>
    <ImageView
        android:id="@+id/doneIndicator"
        android:layout_width="@dimen/small"
        android:layout_height="@dimen/small"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/ultra_ultra_small"
        android:layout_marginRight="@dimen/ultra_ultra_small"
        android:src="@drawable/tick"
        android:visibility="gone"
        android:layout_weight="20"/>
</LinearLayout>