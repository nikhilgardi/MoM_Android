<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mom.apps"
    android:versionCode="13"
    android:versionName="2.0" >

    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="com.google.android.psf.perroviders.gmission.READ_GSERVICES" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission android:name="com.mom.apps.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.mom.app.permission.C2D_MESSAGE" />

    <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />


    <application
        android:name="com.mom.apps.MoMApp"
        android:allowBackup="true"
        android:icon="@drawable/momicon"
        android:label="@string/app_name"
        android:theme="@style/MoMTheme">

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver
            android:name="com.mom.apps.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.mom.app" />
            </intent-filter>
        </receiver>

        <service android:name="com.mom.apps.gcm.GcmIntentService" />


        <activity
            android:windowSoftInputMode="adjustPan"
            android:name="com.mom.apps.activity.BaseActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_base" >

        </activity>

        <activity
            android:name="com.mom.apps.activity.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <!-- Credit sale -->
        <activity android:name="com.mom.apps.MSwipeAndroidSDKListActivity1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
>
        </activity>
        <activity
            android:name="com.mom.apps.CreditSaleView"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="mSwipe"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="com.mom.apps.CreditSaleSignatureView"
            android:label="mSwipe"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.mom.apps.CreditSaleViewAmexCard"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="mSwipe" >
        </activity>
        <activity
            android:name="com.mom.apps.LastTrxStatus"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="mSwipe" >
        </activity>
        <activity
            android:name="com.mom.apps.ChangePassword"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="mSwipe" >
        </activity>

        <service
            android:name="com.mom.apps.SwiperCallStateService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.bbpos.swiper.CALL_STATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.mom.apps.activity.VerifyTPinActivity"
            android:label="@string/title_activity_verify_tpin" >
        </activity>
        <activity
            android:name="com.mom.apps.activity.TransactionMessageActivity"
            android:label="@string/title_activity_transaction_confirmation" >
        </activity>

        <activity
            android:name="com.mom.apps.activity.SignupActivity"
            >
        </activity>
        <activity
            android:name="com.mom.apps.activity.ChangePINActivity"
            android:label="@string/title_activity_change_pin" >
        </activity>
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="da418bfcdda0ecf34013b3a98c08fa6fb5cd3fe8" />

    </application>

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />

</manifest>