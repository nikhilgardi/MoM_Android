<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:scrollbars="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:background="@drawable/topbarcolor"
            android:minHeight="53dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center_horizontal"
                android:minHeight="53dp" >

                <TextView
                    android:id="@+id/AccountBal"
                    android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                 android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
               
                android:layout_marginTop="5dp"
                android:paddingTop="50dp"
               
              
                android:textSize="7pt"
                android:textColor="#005076" />
                
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="170dp"
                    android:layout_height="98dp"
                  
                    
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                  
                  
                    
                    android:src="@drawable/logo_320"  />

                
            </TableRow>
        </TableLayout>

        <EditText
            android:id="@+id/repass"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="130dp"
            android:background="@drawable/custom"
            android:hint="@string/tpin1"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:password="true"
            android:visibility="invisible" 
            >
        </EditText>

        <Button
            android:id="@+id/btn_reclogin"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repass"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:onClick="rechargeLogin"
            android:text="@string/tpin_submit_btn"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="invisible" />
          <Button
            android:id="@+id/btn_firstback"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_reclogin"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginRight="21dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:onClick="backpost"
            android:text="@string/tpin_back_btn"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/responseText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_firstback"
            android:layout_marginLeft="10dp"
           
            android:gravity="center_horizontal"
            android:text="Reply"
            android:textColor="#992f2f"
            android:textSize="18dp"
            android:visibility="gone" />
         <TextView
            android:id="@+id/responseText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="5dp"
            android:gravity="center_horizontal"
            android:text="Reply1"
            android:textColor="#333"
            android:textSize="18dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/number"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/Operator"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom"
            android:hint="@string/lblSubscriberId"
            android:inputType="number"
            
            android:visibility="gone" >
        </EditText>

        <Spinner
            android:id="@+id/Operator"
            android:layout_width="265dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:background="@drawable/btn_dropdown"
            android:prompt="@string/feedbacktypeMobileRecharge"
           
            android:visibility="gone" >
        </Spinner>

        <EditText
            android:id="@+id/amount"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/number"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom"
            android:hint="@string/lblAmount"
            android:inputType="number"
            android:visibility="gone" >
        </EditText>

        <EditText
            android:id="@+id/CustomerNumber"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_below="@+id/amount"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom"
            android:hint="@string/lblConsumerNumber"
            android:inputType="number"
            android:maxLength="10"
            android:visibility="gone" >
        </EditText>

        <Button
            android:id="@+id/btn_recharge"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/CustomerNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:onClick="rechargeData"
            android:text="@string/btnn_recharge"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone" />

          <Button
            android:id="@+id/btn_secondback"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_recharge"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="21dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:onClick="Backpost1"
            android:text="@string/btn_secondback"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/secondresponseText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_secondback"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Reply"
            android:textColor="#992f2f"
            android:textSize="18dp"
            android:visibility="gone" />
        
        
      

       
        <Button
            android:id="@+id/new_recharge"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
           
            android:layout_below="@+id/responseText1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button"
            android:onClick="newRecharge"
            android:text="@string/btn_newRecharge"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>