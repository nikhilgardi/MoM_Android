     	<EditText
            android:id="@+id/login_TXT_merchantpassword"
            android:layout_width="265dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom"
            android:hint="@string/password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:password="true"
            android:textStyle="bold" >
        </EditText>

        <Button
            android:id="@+id/login_BTN_signin"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_TXT_merchantpassword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:onClick="rechargeLogin"
            android:text="@string/btn_login"
            android:textSize="15dp"
            android:typeface="sans"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/login_BTN_back"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_BTN_signin"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginRight="21dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:onClick="backpost"
            android:typeface="sans"
            android:text="@string/btn_back"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="visible" />
        
